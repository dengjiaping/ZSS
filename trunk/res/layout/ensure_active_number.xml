<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
	<RelativeLayout
        android:layout_width="@dimen/log_srcoll_width"
        android:layout_height="@dimen/log_srcoll_height"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        >
	    <EditText 
	        android:id="@+id/activeNumberEditText"
	        android:layout_width = "438dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginTop="20dp"
	        android:padding="0dp"
	        android:background="@drawable/text_enter_xml"
	        android:drawableLeft="@drawable/login_left_phone_selector"
	        android:hint="@string/active_number_hint"
	        android:maxLines="1"
	        android:drawablePadding="12dp"
	        android:singleLine="true"
	        android:inputType="number"
	        android:maxLength="20"
	        android:textColor="@color/text_normal_color"
	        style="@style/input_style"
	        android:textSize="25sp"/>
	    <Button
	        android:id="@+id/getActiveNumberButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/regain_active_number"
	        android:layout_toRightOf="@id/activeNumberEditText"
	        android:layout_alignTop="@id/activeNumberEditText"
	        android:textSize="30sp"
	        android:textColor="@color/text_normal_color"
	        android:background="@drawable/button_roundconer_selector"
	        android:layout_marginLeft="20dp"
	        android:visibility="gone"
	        />
	    <TextView
	        android:id="@+id/regainActiveNumberText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_toRightOf="@id/activeNumberEditText"
	        android:layout_alignTop="@id/activeNumberEditText"
	        android:layout_alignBottom="@id/activeNumberEditText"
	        android:textSize="24sp"
	        android:textColor="@color/blue_text"
	        android:text="@string/regain_active_number_hint"
	        />
	    <Button 
	        android:id="@+id/submitActiveNumberButton"
	        android:layout_width = "697dp"
	        android:layout_height="60dp"
	        android:layout_marginTop="30dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/activeNumberEditText"
	        android:background="@drawable/btn_bg_xml"
	        android:textSize="30sp"
	        android:textColor="#fff"
	        android:text="@string/submit"
	        android:layout_centerHorizontal="true"
	        android:shadowColor="#000"
	        android:shadowDy="1"
	        android:shadowRadius="1"/>
    </RelativeLayout>

</RelativeLayout>