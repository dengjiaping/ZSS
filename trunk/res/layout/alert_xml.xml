<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 	
    android:background="@drawable/delete_goods_bg">
  
    <TextView
        android:id="@+id/alert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deal_Hangup_first"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />
    
    <Button 
        android:id="@+id/i_know"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="@string/clean_up_shopping_cart_positive"
        android:textSize="30sp"
		android:layout_marginTop="35dp"
        android:layout_below="@id/alert_text"
        android:layout_alignRight="@id/alert_text"
        android:layout_alignLeft="@id/alert_text"
        android:background="@drawable/clean_up_positive_button_xml" />
</RelativeLayout>
