<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catalog_bg" >
	<!-- 标题 -->
    <RelativeLayout
        android:id="@+id/titleLayout2"
        style="@style/left_top_style"
        >
        <ImageButton
            android:id="@+id/membershipCardPayReturnButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pay_back_selector"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />
        <Button
            android:id="@+id/membershipCardPayButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/membershipCardPayReturnButton"
            android:background="@drawable/button_roundconer_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:text="@string/membership_pay"
            android:textSize="30sp"
            />
    </RelativeLayout>
    
    <Button
        android:id="@+id/deleteMembershipCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/manager_delet_select"
        android:textColor="@color/gray_color"
        android:text="@string/delete_membership_card"
        android:textSize="22sp"
        android:shadowColor="#000"
 		android:shadowDy="1"
		android:shadowRadius="1"
        />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLayout2"
        android:layout_above="@id/deleteMembershipCardButton"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                style="@style/membership_card_list_linearlayout_style"
                >
                <TextView
                    style="@style/membership_card_list_left_text_style"
                    android:text="@string/membership_card_no1"
                    />
                <TextView
                    style="@style/membership_card_list_right_text_style"
                    android:text="@string/app_name"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/membership_divider"
                />
            <LinearLayout
                style="@style/membership_card_list_linearlayout_style"
                >
                <TextView
                    style="@style/membership_card_list_left_text_style"
                    android:text="@string/membership_card_type"
                    />
                <TextView
                    style="@style/membership_card_list_right_text_style"
                    android:text="@string/app_name"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/membership_divider"
                />
            <LinearLayout
                style="@style/membership_card_list_linearlayout_style"
                >
                <TextView
                    style="@style/membership_card_list_left_text_style"
                    android:text="@string/membership_card_deadline"
                    />
                <TextView
                    style="@style/membership_card_list_right_text_style"
                    android:text="@string/app_name"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/membership_divider"
                />
            <LinearLayout
                style="@style/membership_card_list_linearlayout_style"
                >
                <TextView
                    style="@style/membership_card_list_left_text_style"
                    android:text="@string/membership_card_rebate"
                    />
                <TextView
                    style="@style/membership_card_list_right_text_style"
                    android:text="@string/app_name"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/membership_divider"
                />
            <LinearLayout
                style="@style/membership_card_list_linearlayout_style"
                >
                <TextView
                    style="@style/membership_card_list_left_text_style"
                    android:text="@string/membership_card_balance1"
                    />
                <TextView
                    style="@style/membership_card_list_right_text_style"
                    android:text="@string/app_name"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/membership_divider"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>