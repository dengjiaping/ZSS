 
   <ScrollView
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/leftbarlistproduct"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent" > 
       
       <RelativeLayout 
            android:layout_width="fill_parent"
       		android:layout_height="wrap_content">
       		
           <Button
               android:id="@+id/leftBarSalesStatistic"
               android:layout_width="205dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="42dp"
               android:layout_marginTop="48dp"
               android:textSize="28.0px"
               android:text="@string/sale_statistic"
               android:background="@drawable/button_comm_selector_xml" />
           
           <View
               android:id="@+id/leftBarLine1"
               android:layout_width="match_parent"
               android:layout_marginLeft="15dp"
               android:layout_height="1dp"
               android:layout_marginRight="15dp"
               android:background="#000000"
               android:layout_marginTop="45dp" 
               android:layout_below="@id/leftBarSalesStatistic"/>
           
          <Button
               android:id="@+id/leftBarAllRecord"
               android:layout_width="205dp"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@id/leftBarSalesStatistic"
               android:layout_alignRight="@id/leftBarSalesStatistic"
               android:layout_marginTop="35dp"
               android:textSize="28.0px"
               android:text="@string/leftBarSaleRecord"
               android:layout_below="@id/leftBarLine1"
               android:background="@drawable/button_comm_selector_xml" />
          
          <Button
               android:id="@+id/leftBarHangUpRecord"
               android:layout_width="205dp"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/leftBarAllRecord"
               android:layout_alignTop="@id/leftBarAllRecord"
               android:layout_marginLeft="85dp"
               android:textSize="28.0px"
               android:text="@string/leftBarHangUpRecord"
               android:background="@drawable/button_comm_selector_xml" />
          
           <Button
               android:id="@+id/leftBarSaleRecord"
               android:layout_width="205dp"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/leftBarHangUpRecord"
               android:layout_alignTop="@id/leftBarHangUpRecord"
               android:layout_marginLeft="85dp"
               android:textSize="28.0px"
               android:visibility="gone"
               android:text="@string/leftBarSaleRecord"
               android:background="@drawable/button_comm_selector_xml" />
           
            <View
               android:id="@+id/leftBarLine2"
               android:layout_width="match_parent"
               android:layout_marginLeft="15dp"
               android:layout_height="1dp"
               android:layout_marginRight="15dp"
               android:background="#000000"
               android:layout_marginTop="35dp" 
               android:layout_below="@id/leftBarAllRecord"/>
           
        
 	   <com.koolyun.mis.widget.MyExpandableListView
            android:id="@+id/leftbarexpandListview"
        	android:layout_height="fill_parent"
           	android:layout_width="fill_parent" 
        	android:drawSelectorOnTop="true" 
        	android:scrollbars="none"
        	android:visibility="gone"
        	android:cacheColorHint="@android:color/transparent">
      </com.koolyun.mis.widget.MyExpandableListView>
 		
 	  <ListView
 		  android:id="@+id/leftbarshowallrecentsaleproduct"
 		  android:layout_width="fill_parent"
 		  android:layout_height="wrap_content"
 		  android:visibility="gone" >
 	  </ListView>
 	  
 	  </RelativeLayout>
 </ScrollView>
 