<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120dp"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/quick_money"
        android:layout_width="@dimen/pay_viewiten_width"
        android:layout_height="85dp"
        android:orientation="horizontal" />

    <EditText
        android:id="@+id/money_input"
        android:layout_width="@dimen/pay_viewiten_width"
        android:layout_height="@dimen/pay_viewiten_height"
        android:layout_below="@+id/quick_money"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_enter_xml"
        android:drawableLeft="@drawable/cash_left_drawable_xml"
        android:drawablePadding="10dp"
        android:gravity="center_vertical|left"
        android:hint="@string/info_input_cash"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/text_normal_color"
        android:textSize="30sp" />

    <Button
        android:id="@+id/money_input_btn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignRight="@id/money_input"
        android:layout_alignTop="@id/money_input"
        android:layout_margin="10dp"
        android:background="@drawable/green_btn"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/settlement"
        android:textColor="@color/text_normal_color"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/spline"
        android:layout_width="@dimen/pay_viewiten_width"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/money_input"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/money_input"
        android:layout_marginTop="25dp"
        android:background="@drawable/split_2" />

    <Button
        android:id="@+id/swap_card_btn"
        android:layout_width="@dimen/pay_viewiten_width"
        android:layout_height="@dimen/pay_viewiten_height"
        android:layout_below="@id/spline"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/info_input_card"
        android:padding="0dp"
        android:background="@drawable/btn_bg_xml"
        android:textColor="#fff"
        android:textSize="30sp" />

</RelativeLayout>