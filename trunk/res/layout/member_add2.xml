<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/member_bg"
     >
     <!-- 卡号 -->
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginRight="30dp"
	    >
	    <TextView
	        android:layout_width="146dp"
	        android:layout_height="96dp"
	        android:text="@string/membership_card_no1"
	        android:textSize="26sp"
	        android:textColor="@color/text_normal_color"
	        android:gravity="center"
	        />
        <EditText
            android:id="@+id/memberAddCardNoEdit"
            android:layout_width="277dp"
            android:layout_height="50dp"
            android:hint="@string/membership_card_add_hint"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:background="@drawable/editshape"
        	android:textColorHint="#C7C7C7"
        	android:paddingLeft="5dp"
        	android:layout_marginLeft="10dp"
        	android:layout_gravity="center_vertical"
            />
	</LinearLayout>
    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/membership_divider"
	    />
	<!-- 卡类型 -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingRight="20dp"
	    >
	    <TextView
	        android:layout_width="146dp"
	        android:layout_height="96dp"
	        android:text="@string/membership_card_type"
	        android:textSize="26sp"
	        android:textColor="@color/text_normal_color"
	        android:gravity="center"
	        />
        <TextView
            android:id="@+id/memberAddCardTypeText"
            android:layout_width="277dp"
            android:layout_height="96dp"
        	android:gravity="center_vertical|right"
        	android:text="@string/membership_card_type_solid"
	        android:textSize="26sp"
	        android:textColor="@color/text_normal_color"
            />
	</LinearLayout>
    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/membership_divider"
	    />
	<!-- 折扣 -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginRight="30dp"
	    >
	    <TextView
	        android:layout_width="146dp"
	        android:layout_height="96dp"
	        android:text="@string/membership_card_rebate"
	        android:textSize="26sp"
	        android:textColor="@color/text_normal_color"
	        android:gravity="center"
	        />
        <EditText
            android:id="@+id/memberAddRebateEdit"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:hint="@string/user_phone_hint"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:background="@drawable/input_0"
        	android:textColorHint="#C7C7C7"
        	android:paddingLeft="5dp"
        	android:layout_marginLeft="10dp"
        	android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="42dp"
            android:layout_height="50dp"
            android:background="@drawable/percent_0"
            android:text="%"
            android:textColor="@color/text_normal_color"
            android:textSize="26sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
	</LinearLayout>
    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/membership_divider"
	    />
	<!-- 有效期 -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingRight="20dp"
	    >
	    <TextView
	        android:layout_width="146dp"
	        android:layout_height="96dp"
	        android:text="@string/membership_card_deadline"
	        android:textSize="26sp"
	        android:textColor="@color/text_normal_color"
	        android:gravity="center"
	        />
        <Button
            android:id="@+id/memberAddDeadlineButton"
            android:layout_width="277dp"
            android:layout_height="50dp"
            android:background="@drawable/button_roundconer_selector"
        	android:layout_marginLeft="10dp"
        	android:layout_gravity="center_vertical"
        	android:drawableLeft="@drawable/statistics_icon"
            />
	</LinearLayout>
    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/membership_divider"
	    />
	
	<Button
	    android:id="@+id/memberCreateAccountButton"
	    android:layout_width="400dp"
	    android:layout_height="60dp"
	    android:background="@drawable/button_roundconer_selector"
	    android:layout_marginLeft="24dp"
	    android:layout_marginRight="24dp"
	    android:layout_marginTop="21dp"
	    android:text="@string/membership_add_account"
	    android:textSize="30sp"
	    android:textColor="@color/text_normal_color"
	    android:layout_marginBottom="10dp"
	    />
    
</LinearLayout>