<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/billing_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout  
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="60dp" >
	        
	   <RelativeLayout
	       android:id="@+id/editUserNameLayout"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:gravity="left|center_vertical" >
	       <TextView
	           android:id="@+id/edituserNameText"
	           style="@style/setting_edit_text"
	           android:drawableLeft="@drawable/head_user"
	           android:text="用户"/>

	       <EditText
	           android:id="@+id/editUserNameEdit"
	           style="@style/setting_edit_eidt_style"
	           android:layout_alignBaseline="@+id/edituserNameText"
	           android:layout_alignBottom="@+id/edituserNameText"
	           android:layout_toRightOf="@id/edituserNameText"
	           android:ems="10"
	           android:gravity="left|center_vertical"
	           android:hint="请输入用户名"
	           android:inputType="text">

	           <requestFocus />
	       </EditText>

	   </RelativeLayout>
	   
	   <View
	       android:id="@+id/editUserNameLine"
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:layout_marginTop="25dp"
	       android:layout_below="@id/editUserNameLayout"
	       android:background="@color/line_list_color" />
	   
	   <RelativeLayout
	       android:id="@+id/editUserPassWordLayout"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="25dp"
	       android:layout_below="@id/editUserNameLine" >
	       
	       <TextView
	           android:id="@+id/editusePassWordText"     
	           android:text="密码"
	           android:drawableLeft="@drawable/head_user"
	           style="@style/setting_edit_text"/>
	       
	       <EditText
	           android:id="@+id/editUserPassWordEdit"
	           android:layout_toRightOf="@id/editusePassWordText"
	           android:layout_alignBaseline="@+id/editusePassWordText"
	           android:layout_alignBottom="@+id/editusePassWordText"
	           android:inputType="textPassword"
	           android:ems="10"
	           android:maxLength="6"
	           style="@style/setting_edit_eidt_style"
	           android:hint="请输入密码" />
	   </RelativeLayout>
	   
	    <View
	       android:id="@+id/editUserPassWordLine"
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:layout_marginTop="25dp"
	       android:layout_below="@id/editUserPassWordLayout"
	       android:background="@color/line_list_color" />
	   
	   <RelativeLayout
	       android:id="@+id/editUserPassWordAgainLayout"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="25dp"
	       android:layout_below="@id/editUserPassWordLine" >
	       
	       <TextView
	           android:id="@+id/editusePassWordAgainText"
	           style="@style/setting_edit_text"
	           android:text="确认密码"
	           android:drawablePadding="-5dp"
	           android:drawableLeft="@drawable/head_user"/>
	       
	      <EditText
	           android:id="@+id/editUserPassWordAgainEdit"
	           android:inputType="textPassword"
	           android:ems="10"
	           android:maxLength="6"
	           android:layout_alignBaseline="@+id/editusePassWordAgainText"
	           android:layout_alignBottom="@+id/editusePassWordAgainText"
	           android:layout_toRightOf="@id/editusePassWordAgainText"
	           style="@style/setting_edit_eidt_style"
	           android:hint="请输入确认密码" />
	   </RelativeLayout>
	   
	   <Button
	       android:id="@+id/editUserAddUserBtn"
	       android:layout_width="150dp" 
	       android:layout_height="wrap_content"
	       android:text="@string/sure"
	       android:layout_marginTop="60dp"
	       android:layout_marginLeft="230dp"
	       android:layout_below="@id/editUserPassWordAgainLayout"
	       android:textColor="@color/text_normal_color"
	       android:background="@drawable/button_comm_selector_xml"/>
	</RelativeLayout>
</ScrollView>

