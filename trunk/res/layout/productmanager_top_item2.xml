<RelativeLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
 
        <Button
            android:id="@+id/add_product"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="75dp" 
            android:paddingTop="0dp"
          
            android:background="@drawable/name_add_xml" />

        <TextView
            android:id="@+id/product_second_summary"
            android:layout_width="610dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/add_product"
            android:maxLines="2"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/allname"
            android:textSize="30sp" />

        <Button
            android:id="@+id/prdmg_backtoall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/add_product"
            android:layout_alignParentLeft="true"
            android:background="@drawable/pay_back_selector"
            android:paddingLeft="40dp" />
        
    </RelativeLayout> 