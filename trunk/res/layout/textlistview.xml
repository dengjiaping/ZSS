<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

   <ImageView
        android:id="@+id/sale_product_item_imageview"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:contentDescription="@string/accounts"
        android:background="@drawable/logo" />

   <TextView
       android:id="@+id/sale_product_item_nuber" 
       android:background="@drawable/bar_color"
       android:textColor="@color/solid_white"
       android:layout_width="wrap_content"
       android:layout_height="27dp"
       android:minWidth="27dp"
       android:gravity="center|bottom"
       android:layout_marginLeft="20dp"
       android:paddingBottom="1dp"
	   android:text="123"
    
       android:textSize="20sp"
       android:singleLine="true"
       android:maxLength="4" />

   <com.koolyun.mis.widget.MoneyView
       android:id="@+id/sale_product_item_price"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="22dp"
       android:textSize="30sp"
       android:textColor="@color/text_normal_color"
        android:maxLength="10"
       android:singleLine="true" />

   <TextView
       android:id="@+id/sale_product_item_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/text_normal_color"
       android:layout_marginLeft="19dp"
       android:maxLength="9"
       android:singleLine="true"
       android:textSize="30sp" />

 
</LinearLayout>