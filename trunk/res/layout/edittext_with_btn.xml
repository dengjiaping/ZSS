<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pay_viewiten_width"
    android:layout_height="@dimen/pay_viewiten_height" >
        <EditText 
                    
        android:id="@+id/text_input"
        android:layout_width = "match_parent"
        android:layout_height= "match_parent"
        android:padding="0dp"
        android:background="@drawable/text_enter_xml"
        android:maxLines="1"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:gravity="center_vertical|left"
        android:textColor="@color/text_normal_color"
        android:textSize="30sp" />
        
    <com.koolyun.mis.widget.SendButton
        android:id="@+id/send_button"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/text_normal_color"
        android:textSize="30sp"
        android:layout_alignParentRight="true" 
        android:layout_alignParentTop="true"/>
<!-- 
        android:drawableLeft="@drawable/email_left_drawable_xml"
        android:hint="@string/input_email_address"
        android:inputType="textEmailAddress"
 -->
</RelativeLayout>
